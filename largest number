//largest of 3 positive numbers 
#include <stdio.h>
int main()
{
    int a,b,c;
    printf("enter the value of a b c \n");
    scanf("%d%d%d",&a,&b,&c);
    if(a>=0&&b>=0&&c>=0)
    {
     if(a>c)
      {
        if (a>b)
        {
             printf("the largest is a=%d\n",a);
        }
        else
        {
            printf("the largest is b=%d\n",b);
        }
      }    
    else 
     {
        printf("the largest is c=%d\n",c);
     } 
    }
    else 
    {
        printf("invalid number in input");
    }

}
