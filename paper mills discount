#include <stdio.h>
int main()
{
    int n;
    float x;
    printf("enter the number of blue books \n");
    scanf("%d",&n);
    if(n>10000)
    {
     if(n<15000)
      {
        printf("hey you got 10 percent discount!!!\n");
        x=((n*10)*10)/100;
        printf("the total cost after discount of 10 percent x=%f\n ",x);
      }
     else 
        {
           printf("hey you got 20 percent discount!!!\n");
           x=((n*10)*20)/100;
           printf("the total cost after discount of 20 percent x=%f\n ",x);
        }
       
    }
   else 
    {
        printf(" no discount!!!\n ");
        x=10*n;
        printf("the total cost x=%f ",x);
    }
    return (0);
}
